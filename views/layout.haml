!!!
%html{:lang => 'en'}
  %head
    %meta{:charset => 'utf-8'}
    - if @description
      %meta{:name => 'description', :content => @description}
    - if @keywords
      %meta{:name => 'keywords', :content => @keywords}
    %meta{:content => 'width=device-width, initial-scale=1.0', :name => 'viewport'}
    %meta{:content => '', :name => 'author'}/
    %link{:href => "#{url('/bootstrap/bootstrap.css')}", :media => 'screen', :rel => 'stylesheet'}
    %link{:href => "#{url('/bootstrap/curl.css')}", :media => 'screen', :rel => 'stylesheet'}
    %link{:href => "#{url('/css/master.css')}", :media => 'screen', :rel => 'stylesheet'}
    %link{:href => "#{url('/bootstrap/bootstrap-responsive.css')}", :media => 'screen', :rel => 'stylesheet'}
    /[if lte IE 6]
      %link{:rel => 'stylesheet', :href => "#{url('http://universal-ie6-css.googlecode.com/files/ie6.1.1.css')}", :media =>'screen, projection'}
    /[if lt IE 9]
      %script{:src => '//html5shim.googlecode.com/svn/trunk/html5.js'}
    %link{:href => "#{url('/articles.xml')}", :rel => 'alternate', :type => 'application/atom+xml'}
    %link{:href => "#{url('/attachments/img/favicon.ico?123')}", :rel => "shortcut icon"}
    %link{:href => "#{url('/attachments/img/apple-touch-icon.png')}", :rel => "apple-touch-icon"}
    %link{:href => "#{url('/attachments/img/apple-touch-icon-72x72.png')}", :rel => "apple-touch-icon", :sizes => "72x72"}
    %link{:href => "#{url('/attachments/img/apple-touch-icon-114x114.png')}", :rel => "apple-touch-icon", :sizes => "114x114"}
    %link{:href=>'http://fonts.googleapis.com/css?family=Cabin+Condensed:400,500,600,700', :rel=>'stylesheet', :type=>'text/css'}

    %title= @title
  %body
    #menu
      = haml :menu, :layout => false

    %div(class="container")
      = yield
      %footer
        = haml :footer, :layout => false
    .analytics
      = haml :analytics, :layout => false
