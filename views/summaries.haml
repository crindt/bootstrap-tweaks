- unless pages.empty?
  %ul.thumbnails
    - pages.each do |page|
      %li
        %article.thumbnail
          %header
            %h1
              /%a(href="#{url(page.abspath)}")= page.link_text
              = page.link_text
          - if page.summary.nil? || page.summary.empty?
            ~ page.body(self)
          - else
            ~ page.summary
            %p.read_more
              %a(href="#{url(page.abspath)}")= page.read_more
          /= haml :page_meta, :layout => false, :locals => { :page => page }
